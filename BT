pragma solidity ^0.8.0;
contract Banking {
mapping(address => uint256) private user_account;
mapping(address => bool) private user_exists;
// Create account with optional initial deposit
function create_account() public payable returns (string memory) {
require(!user_exists[msg.sender], "Account already exists");
user_account[msg.sender] = msg.value;
user_exists[msg.sender] = true;
return "Account created";
}
// Deposit Ether into account
function deposit() public payable returns (string memory) {
require(user_exists[msg.sender], "Account not created");
require(msg.value > 0, "Deposit amount must be greater than zero");
user_account[msg.sender] += msg.value;
return "Deposit successful";
}
// Withdraw Ether from account
function withdraw(uint256 amount) public returns (string memory) {
require(user_exists[msg.sender], "Account not created");
require(amount > 0, "Amount must be greater than zero");
require(user_account[msg.sender] >= amount, "Insufficient balance");
user_account[msg.sender] -= amount;
payable(msg.sender).transfer(amount);
return "Withdrawal successful";
}
// Transfer funds between two existing accounts
function transfer(address userAddress, uint256 amount) public returns (string memory) {
require(user_exists[msg.sender], "Your account does not exist");
require(user_exists[userAddress], "Recipient account does not exist");
require(amount > 0, "Amount must be greater than zero");
require(user_account[msg.sender] >= amount, "Insufficient balance");
user_account[msg.sender] -= amount;
user_account[userAddress] += amount;
return "Transfer successful";
}
// Send Ether directly to an address
function send_amt(address payable toAddress, uint256 amount) public returns (string memory) {
require(user_exists[msg.sender], "Account not created");
require(amount > 0, "Amount must be greater than zero");
require(user_account[msg.sender] >= amount, "Insufficient balance");
user_account[msg.sender] -= amount;
toAddress.transfer(amount);
return "Direct send successful";
}
// Get balance of caller
function user_balance() public view returns (uint256) {
return user_account[msg.sender];
}
// Check if account exists
function account_exist() public view returns (bool) {
return user_exists[msg.sender];
}
}
